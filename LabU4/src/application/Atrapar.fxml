<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AtraparController">
   <top>
      <ImageView fx:id="banner" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="cancha" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="flag" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="poke" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="labPuntos" text="0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="butGuardar" mnemonicParsing="false" text="Guardar" />
            <Button fx:id="butNombres" mnemonicParsing="false" text="Mostrar Jugadores Por Nombre" />
            <Button fx:id="butPuntos" mnemonicParsing="false" text="Mostrar Jugadores por Puntos" />
            <Button fx:id="butBuscar" mnemonicParsing="false" text="Buscar" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
